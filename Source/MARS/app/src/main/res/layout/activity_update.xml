<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.ved.MARS.Register">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/register_form"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


            <TextView
                android:id="@+id/medName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Medicine Name"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark" />

            <EditText
                android:hint="Dosage"
                android:textColorHint="@color/colorPrimaryDark"
                android:id="@+id/dosage"
                android:layout_width="200dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="54dp"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:background="@drawable/round_corner"/>

            <TextView
                android:text="Set Time: "
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp">


                <Spinner
                    android:id="@+id/spinner9"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:popupBackground="#25c481"

                    android:spinnerMode="dropdown"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Spinner
                    android:id="@+id/spinner8"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:popupBackground="#25c481"

                    android:spinnerMode="dropdown"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@+id/spinner9"
                    android:layout_alignParentTop="true" />

                <Spinner
                    android:id="@+id/spinner7"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:popupBackground="#25c481"

                    android:spinnerMode="dropdown"
                    android:layout_marginEnd="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/spinner8" />

            </RelativeLayout>
            <TextView
                android:text="Choose Days:"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView8"
                android:layout_width="180dp"
                android:layout_height="23dp"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:text="Sun"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />


                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="125dp"
                    android:text="Mon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/checkbox2"
                    android:layout_marginStart="105dp"
                    android:text="Tue"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:text="Wed"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="125dp"
                    android:text="Thu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox6"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/checkbox5"
                    android:layout_marginStart="105dp"
                    android:text="Fri"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >


                <CheckBox
                    android:id="@+id/checkbox7"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="125dp"
                    android:text="Sat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <Button
                    android:text="Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorListBack"
                    android:background = "@drawable/roundbutton"
                    android:paddingLeft="50dp"
                    android:paddingEnd="60dp"
                    android:paddingStart="50dp" />
                <Button
                    android:text="Update"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorListBack"
                    android:background = "@drawable/roundbutton"
                    android:layout_height="50dp"
                    android:id="@+id/button5"
                    android:paddingLeft="50dp"
                    android:paddingEnd="60dp"
                    android:paddingStart="50dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
